<!-- page to add a new interaction -->

<h2>Add New Interaction
<a class="cancel" href="/interactions"><button>Cancel</button></a>
</h2>
<form action="/interactions" method="POST">
  <h3>Interaction Information</h3>

  <label class="field_question" for="full_name_list">Name of Client</label>
  <br>
  <br>
  <input class="field_data" type="text" list="full_name_list" name="full_name">
  <datalist id="full_name_list">
  <% @all_clients_full_names.each do |name| %>
    <option value="<%= name %>"></option>
  <% end %>
  </datalist>
  <br>
  <br>

  <label class="field_question" for="type">Interaction Type</label>
  <br>
  <br>
  <select class="field_data" name="type" required>
    <option value="email">Email</option>
    <option value="phone">Phone</option>
    <option value="meeting">Meeting</option>
    <option value="notes">Notes</notes>
  </select>
  <br>
  <br>
  <label class="field_question" for="date">Date (MM/DD/YYYY)</label>
  <br>
  <br>
  <input class="field_data" name="date" type="text" required>
  


  <h3>Comments</h3>
 <!-- <label class="field_question" for="comments"></notes>
  <br>
  <br> -->
  <textarea class="field_data" name="comments" rows="12" cols="90"></textarea>
  <br>
  <br>
  <br>
  <input class="submit" type="submit" value="Create New Interaction"> 
</form>