<!-- page to add a new client -->

<h2>Add New Client
<a class="cancel" href="/clients"><button>Cancel</button></a>
</h2>
<form action="/clients" method="POST">
  <h3>Name</h3>
  <label class="field_question" for="client_first">First Name</label>
  <br>
  <br>
  <input class="field_data" name="client_first" type="text" required>
  <br>
  <br>
  <label class="field_question" for="client_last">Last Name</label>
  <br>
  <br>
  <input class="field_data" name="client_last" type="text" required>
  <br>
  <h3>Contact</h3>
  <label class="field_question" for="email">Email</label>
  <br>
  <br>
  <input class="field_data" name="email" type="text">
  <br>
  <br>
  <label class="field_question" for="phone">Phone</label>
  <br>
  <br>
  <input class="field_data" name="phone" type="text">
  <br>
  <h3>Address</h3>
  <label class="field_question" for="street">Street</label>
  <br>
  <br>
  <input class="field_data" name="street" type="text">
  <br>
  <br>
  <label class="field_question" for="city">City</label>
  <br>
  <br>
  <input class="field_data" name="city" type="text">
  <br>
  <br>
  <label class="field_question" for="state">State</label>
  <br>
  <br>
  <input class="field_data" name="state" type="text">
  <br>
  <br>
  <label class="field_question" for="postal">Postal Zip Code</label>
  <br>
  <br>
  <input class="field_data" name="postal" type="text">
  <br>
  <br>
  <label class="field_question" for="notes">Notes</notes>
  <br>
  <br>
  <textarea class="field_data" name="notes" rows="12" cols="90"></textarea>
  <br>
  <br>
  <br>
  <input class="submit" type="submit" value="Create New Client"> 
</form>